<!DOCTYPE html>
<html>
	<head>
	  <title>9cap - Funny Screen Captures</title>
	  <%= favicon_link_tag 'favicon.ico' %>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	  	<meta name="description" content="9cap is a society with user generated funny screen captures with commenting and ratings!">
		<meta name="keywords" content="Screen,Captures,Funny,Television, Movie">
	</head>
	<body>
		
		<div class="container">
			<%= render 'layouts/header' %>
			<div class="container">
				<% flash.each do |name, msg| %>
					<%= content_tag(:div,msg, class: "alert alert-#{name}") %>
				<% end %>
				<%= yield %>
				
			</div>

		</div>
	</body>
</html>
