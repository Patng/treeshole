<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @pin.image %>
			<p>
		 	 <%= @pin.description %>
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
			<div class="fb-like" data-href="127.0.0.1:3000" data-width="450" data-show-faces="true" data-send="true"></div>
			<div class="fb-comments" data-href="127.0.0.1:3000" data-width="470"></div>

		</div>
	</div>
</div>
