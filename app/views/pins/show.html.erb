<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= link_to 'Back', pins_path %>
			<%= image_tag @pin.image %>
			<p>
		 	 <%= @pin.description %>
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= content_tag(:div, nil, :class => 'fb-like', "data-href" => "#{request.protocol}#{request.host_with_port}#{request.fullpath}", "data-width" => '470' ) %>
			<%= content_tag(:div, nil, :class => 'fb-comments', "data-href" => "#{request.protocol}#{request.host_with_port}#{request.fullpath}", "data-width" => '470' ) %>

		</div>
	</div>
</div>
